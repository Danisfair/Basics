# if / elif / else
# se / se não se / se não

condição1 = False
condição2 = False
condição3 = False
condição4 = False



if condição1: 
    print('código para condição 1')
    print('código para condição 1')
elif condição2:
    print('Código para condição 2')
elif condição3:
    print('Código para condição 3')
elif condição4:
    print('Código para condição  4')
else:
    print('Nenhuma condição foi satisfeita')
